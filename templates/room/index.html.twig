{% extends 'base.html.twig' %}

{% block title %}Rooms{% endblock %}

{% block body %}
    <div class="mb-4 p-5 border-bottom border-2">
        <h1>What is your next sweet home?</h1>
    </div>
    <div class="container">
        <div class="row">
            {% for item in rooms %}
            <a href="#" class="col-md-4 col-sm-6 mb-5 text-decoration-none">
                <div class="position-relative">
                    <div class="img-overlay p-2 position-absolute h-100 w-100 d-flex flex-column justify-content-between rounded-4">
                    <form action="POST" class="w-100 text-end">
                        <input type="hidden" name="room" value={{ item.id }}>
                        {# TODO: Conditional input:hidden for add or remove favorite #}
                        <button type="submit" class="rounded-pill bg-transparent border-0 border-light">
                            <i class="bi bi-heart text-white"></i>
                        </button>
                    </form>
                    {# Host info : img + firstname #}
                    <div class="card-host-info d-flex gap-2 align-items-center">
                        <img src={{ item.host.image }} alt="{{ item.host.firstname }} {{ item.host.lastname }}" class="rounded-pill" width="22">
                        <p class="m-0 text-white">{{ item.host.firstname }}</p>
                    </div>
                    </div>
                    <img src={{ item.cover }} class="img-fluid rounded-4" alt={{ item.title }} />
                </div>
                {# Host more infos #}
                <div>
                    <p class="mt-3 mb-1 text-dark fw-bold ">{{ item.title|slice(0,30) }}...</p>
                    <p class="mb-1 text-dark">start from <span class="fw-bold">{{ item.price }}â‚¬</span> per night</p>
                    <p class="text-dark">See details <i class="bi bi-arrow-right"></i></p>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
